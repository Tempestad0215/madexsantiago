{
    "compilerOptions":{
        "allowJs":true,
        "module":"ESNext",
        "moduleResolution":"Node",
        "target":"esnext",
        "jsx":"preserve",
        "strict":false,
        "esModuleInterop":true,
        "skipLibCheck":true,
        "forceConsistentCasingInFileNames":true,
        "noEmit":true,
        "isolatedModules":true,
        "types": ["vite/client"],
        "paths": {
            "@/*" : ["./resources/js/*"],
            "@partials/*" : ["./resources/js/Pages/Profile/Partials/*"],
            "@component/*": ["./resources/js/Components/*"],
            "@route": ["./vendor/tightenco/ziggy/src/js"],
            "@interfaces/*":["./resources/js/interfaces/*"],
            "@global/*": ["./resources/js/global/*"]
        }
    },
    "include":[
        "resources/js/**/*.ts",
        "resources/js/**/*.d.ts",
        "resources/js/**/*.vue",
        "resources/js/bootstrap.js"
    ]
}
