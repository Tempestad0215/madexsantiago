{
    "compilerOptions":{
        "allowJs":true,
        "module":"ESNext",
        "moduleResolution":"Node",
        "target":"esnext",
        "jsx":"preserve",
        "strict":false,
        "esModuleInterop":true,
        "skipLibCheck":true,
        "forceConsistentCasingInFileNames":true,
        "noEmit":true,
        "isolatedModules":true,
        "types": ["vite/client"]
    },
    "include":[
        "resources/js/**/*.ts",
        "resources/js/**/*.d.ts",
        "resources/js/**/*.vue",
        "resources/js/bootstrap.js"
    ]
}
